<resources>

    <style name="Widget.Theme.FrameWork.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
    </style>

    <style name="inputTextAppearance">
        <item name="hintColor">@color/color_C1B</item>
        <item name="inputColor">@color/color_333</item>
        <item name="textSize">15sp</item>
    </style>

    <style name="titleTextAppearance">
        <item name="titleColor">@color/color_333</item>
        <item name="textSize">15sp</item>
        <item name="minWidth">100dp</item>
    </style>

