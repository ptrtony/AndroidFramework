<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        
        <variable
            name="viewModel"
            type="com.sinata.framework.hi_arch.scene2.HomeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <com.sinata.common.ui.view.IconFontTextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:textColor="@color/color_000"
                android:textSize="@dimen/dp_16"
                android:text="@string/if_back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_000"
                android:text="传统的MVVM"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_eee" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_000"
            android:text="@{viewModel.mInfo.username}"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10" />


        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_000"
            android:text="@={viewModel.mInfo.address}"
            android:hint="请输入地址"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            />

    </LinearLayout>
</layout>