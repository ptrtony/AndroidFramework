<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/shape_dialog_add_new_edit"
        android:orientation="vertical">


        <com.sinata.hi_ui.title.HiNavigationBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            app:nav_title="@string/title_new_address" />


        <com.sinata.common.ui.view.InputItemLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:hint="搜获人姓名"
            app:inputTextAppearance="@style/inputTextAppearance"
            app:inputType="text"
            app:title="用户名"
            app:titleTextAppearance="@style/titleTextAppearance"
            app:topLineAppearance="@style/lineAppearance"
            app:bottomLineAppearance="@style/lineAppearance"
            />


        <com.sinata.common.ui.view.InputItemLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:hint="收货人手机号"
            app:inputTextAppearance="@style/inputTextAppearance"
            app:inputType="number"
            app:title="手机号"
            app:titleTextAppearance="@style/titleTextAppearance"
            app:topLineAppearance="@style/lineAppearance"
            app:bottomLineAppearance="@style/lineAppearance"
            />


        <com.sinata.common.ui.view.InputItemLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:hint="请选择"
            app:inputTextAppearance="@style/inputTextAppearance"
            app:inputType="text"
            app:title="地址"
            app:titleTextAppearance="@style/titleTextAppearance"
            app:topLineAppearance="@style/lineAppearance"
            app:bottomLineAppearance="@style/lineAppearance"
            />


        <com.sinata.common.ui.view.InputItemLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:hint="比如所在街道"
            app:inputTextAppearance="@style/inputTextAppearance"
            app:inputType="text"
            app:title="详细地址"
            app:titleTextAppearance="@style/titleTextAppearance"
            app:topLineAppearance="@style/lineAppearance"
            app:bottomLineAppearance="@style/lineAppearance"
            />


        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_16"
            android:text="保存"
            android:layout_marginTop="@dimen/dp_10"
            android:backgroundTint="@color/color_dd2"
            app:cornerRadius="@dimen/dp_5"
            />



    </LinearLayout>

</FrameLayout>